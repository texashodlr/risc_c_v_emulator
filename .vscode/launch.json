        {
            "type": "venus",
            "request": "launch",
            "name": "Launch with LED Matrix",
            "program": "${file}",
            "stopOnEntry": true,
            "stopAtBreakpoints": true,
            "openViews": [
                "LED Matrix"
            ],
            "ledMatrixSize": {
                "x": 10,
                "y": 10
            }
        }
